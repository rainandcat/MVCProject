@model List<MVCProject.Service.ViewModels.ProductsViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
@if (ViewBag.ResultMessage != null)
{
    @Html.Label("info", (string)ViewBag.ResultMessage, new { @class = "text-info" })
}
<input type="button" value="新增" onclick="window.location='@Url.Action("Create", "Product")'" />
<table class="table">
    <thead>
        <tr>
            <td>
                ProductID
            </td>
            <td>
                ProductName
            </td>
            <td>
                SupplierID
            </td>
            <td>
                CategoryName
            </td>
            <td>
                QuantityPerUnit
            </td>
            <td>
                UnitPrice
            </td>
            <td>
                UnitsInStock
            </td>
            <td>
                UnitsOnOrder
            </td>
            <td>
                ReorderLevel
            </td>
            <td>
                Discontinued
            </td>
            <td>
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in this.Model)
        {
            <tr>
                <td>
                    @data.ProductID
                </td>
                <td>
                    @data.ProductName
                </td>
                <td>
                    @data.SupplierID
                </td>
                <td>
                    @data.CategoryName
                </td>
                <td>
                    @data.QuantityPerUnit
                </td>
                <td>
                    @data.UnitPrice
                </td>
                <td>
                    @data.UnitsInStock
                </td>
                <td>
                    @data.UnitsOnOrder
                </td>
                <td>
                    @data.ReorderLevel
                </td>
                <td>
                    @data.Discontinued
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = data.ProductID })
                </td>
            </tr>

        }
    </tbody>
</table>

